// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
//
// Reference: https://www.kevnu.com/zh/posts/10
{
  "auto_update": false,
  "disable_ai": true,
  "vim_mode": true,
  // "proxy": "http://127.0.0.1/4780",

  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 15,
  "ui_font_weight": 400,
  "ui_font_features": {
    "calt": true
  },

  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "buffer_font_weight": 400,
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    "calt": true
  },

  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "autosave": "off",
  "format_on_save": "on",
  "file_scan_exclusions": [
    "**/.git",
    "**/.venv",
    "**/.DS_Store",
    "**/dist",
    // "**/build",
    "**/node_modules",
    "**/target"
  ],
  "file_types": {
    "C": [".c", ".h"],
    "C++": [".cc", ".hh"],
    "JSON": [".json", ".clangd"]
  },

  // Telemetry https://zed.dev/docs/telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Workspace Persistence https://zed.dev/docs/workspace-persistence
  "restore_on_startup": "none",
  "restore_on_file_reopen": false,
  "close_on_file_delete": false,

  // Editor https://zed.dev/docs/visual-customization#editor
  "cursor_blink": false,
  "cursor_shape": null,
  "current_line_highlight": "all",
  "hide_mouse": "on_typing_and_movement",
  "selection_highlight": true,
  "show_whitespaces": "selection",
  "unnecessary_code_fade": 0.3,
  "redact_private_values": false,
  "soft_wrap": "none",
  "preferred_line_length": 80,
  "show_wrap_guides": false,
  "wrap_guides": [],

  "relative_line_numbers": true,
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": false,
    "agent_review": false
  },
  // Title Bar https://zed.dev/docs/visual-customization#titlebar

  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_sign_in": false
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "all",
    "axes": {
      "horizontal": null,
      "vertical": true
    }
  },
  "minimap": null,
  "gutter": {
    "line_numbers": true,
    "runnables": true,
    "breakpoints": true,
    "folds": true,
    "min_line_number_digits": 4
  },
  "search": {
    "button": true
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": null
  },
  "project_panel": {
    "button": true,
    "hide_gitignore": false,
    "default_width": 240,
    "dock": "left",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": null,
    "show_diagnostics": "all",
    "indent_guides": null
  },
  "outline_panel": {},
  "collaboration_panel": { "button": false },
  "chat_panel": { "button": "never" },
  "git_panel": {},
  "message_editor": {},
  "notification_panel": { "button": false },
  "agent": { "button": false },
  "debugger": { "button": false },
  "slash_commands": {
    "docs": {
      "enabled": false
    }
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "git_status": true,
    "close_position": "right",
    "file_icons": true,
    "show_close_button": "always",
    "show_diagnostics": "all"
  },
  "preview_tabs": {},
  "file_finder": {},
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    },
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "cargo": null
  },

  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "keep_selection_on_copy": false,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "detect_venv": {
      "on": {
        "directories": [".venv"],
        "activate_script": "default"
      }
    },
    "env": {},
    "font_size": 14,
    "font_family": "JetBrainsMono Nerd Font",
    "font_features": {
      "calt": true
    },
    "line_height": "standard",
    "option_as_meta": false,
    "button": false,
    // "shell": {
    //   "with_arguments": {
    //     "program": "C:\\windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    //     "args": ["-Nologo"]
    //   }
    // },
    "toolbar": {
      "breadcrumbs": false
    },
    "working_directory": "current_project_directory",
    "scrollbar": {
      "show": "auto"
    }
  },

  // LSP
  "lsp": {},

  "git": {
    "git_gutter": "hide",
    "gutter_debounce": null,
    "inline_blame": { "enabled": false },
    "hunk_style": null
  },
  "line_indicator_format": "short"
}
